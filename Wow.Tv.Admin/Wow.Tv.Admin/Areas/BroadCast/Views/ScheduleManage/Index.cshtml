@using Wow

@model Wow.Tv.Middle.Model.Db49.wowtv.NTB_ATTACH_FILE



@{
    string wowTvScript = AppState["WowTvScript"].ToString();

    DateTime nowDate = DateTime.Now;
    DateTime sun = nowDate.AddDays(0 - (int)(nowDate.DayOfWeek));
    DateTime mon = sun.AddDays(1);
    DateTime tue = sun.AddDays(2);
    DateTime wed = sun.AddDays(3);
    DateTime thu = sun.AddDays(4);
    DateTime fri = sun.AddDays(5);
    DateTime sat = sun.AddDays(6);
    
}

@section scripts{
    <script src="@wowTvScript/BroadCast/ScheduleManage/Index.js?date=20171019133000"></script>
}

@section modalDiv{
    <form id="frmFile">
        <!-- POPUP - 파일등록 -->
        <div id="addFiles" class="modal fade add-files" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">방송 편성표</h4>
                    </div>
                    <div class="modal-body">

                        <!-- Global Search -->
                        <div class="contain-search-global">
                            <table>
                                <colgroup>
                                    <col width="120px">
                                    <col>
                                </colgroup>
                                <tr>
                                    <th rowspan="2">엑셀파일 등록</th>
                                    <td>
                                        <div class="fileinput-new input-group" data-provides="fileinput">
                                            <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                                            <span class="input-group-addon btn btn-success btn-file"><span class="fileinput-new">찾아보기</span><span class="fileinput-exists">다시선택</span><input type="hidden"><input type="file" name="file"></span>
                                            <a href="#" class="input-group-addon fileinput-exists" data-dismiss="fileinput" id="btnFileCancel"><i class="fa fa-times" aria-hidden="true"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <!-- //Global Search -->
                        <!-- Bottom Buttons -->
                        <div class="box-button">
                            <button class="btn btn-success" id="btnFileSave">확인</button>
                            <button class="btn btn-default" type="button" class="close" data-dismiss="modal">취소</button>
                        </div>
                        <!-- //Bottom Buttons -->

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- //POPUP - 파일등록 -->
    </form>
}


<input type="hidden" name="currentMenuSeq" id="hidCurrentMenuSeq" value="@Request["menuSeq"]" />




<div class="row">
    <div class="col-md-12 clearfix">

        <div class="wrap">
            <input type="hidden" id="hidNowDate" value="@nowDate.ToDate()" />

            <!-- Contain Tab -->
            <div class="contain-tab">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" @(nowDate.DayOfWeek == DayOfWeek.Sunday ? "class=active" : "")><a href="#tabOpinion1" class="devWeek" aria-controls="tabOpinion1" role="tab" data-toggle="tab">일(@sun.ToString("MM/dd"))<input type="hidden" value="@sun.ToDate()" /></a></li>
                    <li role="presentation" @(nowDate.DayOfWeek == DayOfWeek.Monday ? "class=active" : "")><a href="#tabOpinion2"  class="devWeek" aria-controls="tabOpinion2" role="tab" data-toggle="tab">월(@mon.ToString("MM/dd"))<input type="hidden" value="@mon.ToDate()" /></a></li>
                    <li role="presentation" @(nowDate.DayOfWeek == DayOfWeek.Tuesday ? "class=active" : "")><a href="#tabOpinion3"  class="devWeek" aria-controls="tabOpinion3" role="tab" data-toggle="tab">화(@tue.ToString("MM/dd"))<input type="hidden" value="@tue.ToDate()" /></a></li>
                    <li role="presentation" @(nowDate.DayOfWeek == DayOfWeek.Wednesday ? "class=active" : "")><a href="#tabOpinion4"  class="devWeek" aria-controls="tabOpinion4" role="tab" data-toggle="tab">수(@wed.ToString("MM/dd"))<input type="hidden" value="@wed.ToDate()" /></a></li>
                    <li role="presentation" @(nowDate.DayOfWeek == DayOfWeek.Thursday ? "class=active" : "")><a href="#tabOpinion5"  class="devWeek" aria-controls="tabOpinion5" role="tab" data-toggle="tab">목(@thu.ToString("MM/dd"))<input type="hidden" value="@thu.ToDate()" /></a></li>
                    <li role="presentation" @(nowDate.DayOfWeek == DayOfWeek.Friday ? "class=active" : "")><a href="#tabOpinion6"  class="devWeek" aria-controls="tabOpinion6" role="tab" data-toggle="tab">금(@fri.ToString("MM/dd"))<input type="hidden" value="@fri.ToDate()" /></a></li>
                    <li role="presentation" @(nowDate.DayOfWeek == DayOfWeek.Saturday ? "class=active" : "")><a href="#tabOpinion7"  class="devWeek" aria-controls="tabOpinion7" role="tab" data-toggle="tab">토(@sat.ToString("MM/dd"))<input type="hidden" value="@sat.ToDate()" /></a></li>
                </ul>
            </div>
            <!-- //Contain Tab -->
            <!-- Table Top -->
            <div class="box-top-table inform">
                <div class="inner-right inform-btn">
                    <span id="spFileName">@Model.USER_UPLOAD_FILE_NAME</span>
                    &nbsp;&nbsp;&nbsp;
                    <span class="text-color1" id="spFileDate">@Model.REG_DATE.ToDate()</span>
                    &nbsp;&nbsp;&nbsp;
                    <button class="btn btn-success" data-toggle="modal" data-target="#addFiles">엑셀등록</button>
                </div>
            </div>
            <!-- //Table Top -->
            <!-- BBS List -->
            <div class="bbs-list1" id="divList">
            </div>
            <!-- //BBS List -->

        </div>

    </div>
</div>

