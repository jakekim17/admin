                        //                "not": false,
                        //                "expressions": [
                        //                    "\\" + location.pathname
                        //                ],
                        //                "caseSensitive": false,
                        //            }
                        //        ]
                        //    }],
                        "metrics": [
                            {
                                "expression": "ga:entrances"
                            }],
                        //"orderBys": [
                        //    {
                        //        "fieldName": "ga:hits",
                        //        "sortOrder": "DESCENDING",
                        //    }
                        //],

                    }]

            }).then(function (response) {

                var parse = JSON.parse(response.body);

                var views = "" + parse.reports[0].data.totals[0].values[0];

                console.log(views);

                $(".getViews").text(views);

            })

                .then(null, function (err) {

                    // Log any errors.

                    console.log(err);

                });

        });

    }


</script>







