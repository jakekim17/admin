@using System.Diagnostics
@model Wow.Tv.Middle.Model.Db49.wowtv.tblTradingStarCategory

@{
    string wowTvScript = AppState["WowTvScript"].ToString();
    string assetsUrl = AppState["AssetsUrl"].ToString();
}

@{
    Layout = null;
}

<link rel="stylesheet" href="@assetsUrl/global/plugins/bower_components/bootstrap-datepicker-vitalets/css/bootstrap-datepicker3.min.css">
<script type="text/javascript" src="@assetsUrl/global/plugins/bower_components/bootstrap-datepicker-vitalets/js/bootstrap-datepicker.min.js"></script>
<script src="@assetsUrl/admin/js/design.js" charset="UTF-8"></script>
<script src="@wowTvScript/jquery.blockUI.js"></script>
<script src="@wowTvScript/TradingStar/Category/Edit.js?date=20170727163009"></script>


<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">카테고리 등록/수정</h4>
        </div>
        <div class="modal-body">

            <!-- 비밀번호변경 -->
            <form class="form-horizontal rounded shadow no-overflow" id="frmSave">

                <input type="hidden" name="hidTradingCode" id="hidTradingCode" value="@Model.tradingCode" />

                <div class="sign-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">tradingCode</label>
                        <div class="col-sm-10">
                            <input class="form-control rounded" type="text"  name="tradingCode" @(string.IsNullOrWhiteSpace(Model.tradingCode) ? "" : "readonly='readonly'") maxlength="10" value="@Model.tradingCode" id="txtTradingCode" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">codeName</label>
                        <div class="col-sm-10">
                            <input class="form-control rounded" type="text" name="codeName"  maxlength="100" value="@Model.codeName" id="txtCodeName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">시작일</label>
                        <div class="col-sm-10">
                            <div class="input-group date">

                                @if (Model.startDt?.Year > 1900)
                                {
                                    @:<input type="text" class="form-control" name="startdt" value="@Model.startDt.Value.ToString("yyyy-MM-dd")">
                                }
                                else
                                {
                                    @:<input type="text" class="form-control" name="startdt" value="">
                                }
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">종료일</label>
                        <div class="col-sm-10">
                            <div class="input-group date">

                                @if (Model.endDt?.Year > 1900)
                                {
                                    @:<input type="text" class="form-control" name="endDt" value="@Model.endDt.Value.ToString("yyyy-MM-dd")">
                            }
                                else
                                {
                                    @:<input type="text" class="form-control" name="endDt" value="">
                            }
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sign-footer">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-64" style="float: right">
                                <button type="button" class="btn btn-theme no-margin rounded" id="btnSave">등록(수정)</button>
                            </div>
                        </div>
                    </div><!-- /.form-group -->
                    <div class="form-group">

                    </div><!-- /.form-group -->
                </div><!-- /.sign-footer -->
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

</div>
