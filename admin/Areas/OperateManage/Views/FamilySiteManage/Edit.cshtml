@using Wow
@using Wow.Tv.Middle.Model.Db49.wowtv

@model NTB_FAMILY

@{
    string wowTvScript = AppState["WowTvScript"].ToString();

    List<NTB_COMMON_CODE> familyGroupCodeList = ViewBag.FamilyGroupCodeList;
}

@{
    Layout = null;
}



<script src="@wowTvScript/OperateManage/FamilySiteManage/Edit.js?date=20170727163009"></script>





<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">패밀리 사이트 관리</h4>
        </div>
        <div class="modal-body">

            <!-- 비밀번호변경 -->
            <form class="form-horizontal rounded shadow no-overflow" id="frmSave" >
                <input type="hidden" id="hidFamilySeq" value="@Model.FAMILY_SEQ" name="FAMILY_SEQ" />

                <div class="sign-body">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><font class="f-red">*</font> 그룹</label>
                        <div class="col-sm-9">
                            <select class="form-control" name="GROUP_CODE">
                                @foreach (var item in familyGroupCodeList)
                                {
                                    <option value="@item.CODE_VALUE1">@item.CODE_NAME</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><font class="f-red">*</font> 사이트명</label>
                        <div class="col-sm-9">
                            <input class="form-control rounded" type="text" value="@Model.SITE_NAME" name="SITE_NAME" id="txtSiteName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><font class="f-red">*</font> URL</label>
                        <div class="col-sm-9">
                            <input class="form-control rounded" type="text" value="@Model.URL" name="URL" id="txtUrl">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">활성</label>
                        <div class="col-sm-9">
                            <div class="fl-l mar-r20">
                                <input class=" fl-l h-16" type="radio" name="ACTIVE_YN" value="Y" @(String.IsNullOrEmpty(Model.ACTIVE_YN) == true || Model.ACTIVE_YN == "Y" ? "checked" : "") >
                                <span> Y</span>
                            </div>
                            <div class="fl-l mar-r20">
                                <input class="fl-l h-16" type="radio" name="ACTIVE_YN" value="N" @(Model.ACTIVE_YN == "N" ? "checked" : "")>
                                <span> N</span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="sign-footer">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-64" style="float: right">
                                @if (Model.FAMILY_SEQ > 0)
                                {
                                <button type="submit" class="btn btn-default no-margin rounded" id="divEdit_btnDelete">삭제</button>
                                }
                                <button type="submit" class="btn btn-theme no-margin rounded" id="divEdit_btnSave">등록(수정)</button>
                            </div>
                        </div>
                    </div><!-- /.form-group -->
                    <div class="form-group">

                    </div><!-- /.form-group -->
                </div><!-- /.sign-footer -->
            </form>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

</div>


